<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linear_upper_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_notification"
                    android:layout_width="@dimen/margin55"
                    android:layout_height="@dimen/margin55"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin15"
                    android:background="@color/grey_alpha"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin15"
                    android:layout_marginRight="@dimen/margin15"
                    android:layout_marginBottom="@dimen/margin15"
                    android:layout_weight="4.5"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_order_no"
                        style="@style/Text_mont_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#345345"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize12" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Text_mont_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin8"
                        android:layout_marginRight="@dimen/margin20"
                        android:text="RRB Group D"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize14" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_to_date"
                        style="@style/Text_mont_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin8"
                        android:text="Application submitted as on 1 Jan 2021"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin15"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_status"
                        style="@style/Text_mont_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/margin5"
                        android:gravity="right"
                        android:text="Pending"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/textsize12" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_status"
                        style="@style/Text_mont_regular"
                        android:layout_width="@dimen/margin10"
                        android:layout_height="@dimen/margin10"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="right"
                        app:srcCompat="@drawable/circle_green" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
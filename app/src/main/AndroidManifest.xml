<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mponline.userApp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_NoActionBar"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <meta-data android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD3tR0ziIBVRteQ_t7Rd1rIrQoqr08Iv4Q"/>

        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activity.ImgPreviewActivity"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activity.MainActivity"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activity.ChatHomeActivity"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activity.RegisterActivity"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activity.NotificationActivity"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activity.FilePreviewActivity"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activity.FormPreviewActivity"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activity.OffersActivity"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activity.PaymentActivity"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activity.InvoicePreviewActivity"></activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.mponline.userApp.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>
    </application>

</manifest>
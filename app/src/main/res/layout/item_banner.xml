<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_banner"
    android:layout_width="@dimen/margin200"
    android:layout_height="114dp"
    android:layout_marginStart="@dimen/margin15">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_banner"
        android:layout_width="@dimen/margin200"
        android:layout_height="114dp"
        android:scaleType="fitXY" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_banner_title"
        style="@style/Text_mont_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin15"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/textsize16" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_banner_subtitle"
        style="@style/Text_mont_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_banner"
        android:padding="@dimen/margin15"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/textsize14" />
</RelativeLayout>
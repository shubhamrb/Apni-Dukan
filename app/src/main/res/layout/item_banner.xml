<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/margin15"
    android:id="@+id/rl_banner"
    android:layout_width="@dimen/margin200"
    android:layout_height="114dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_banner"
        android:scaleType="fitXY"
        android:layout_width="@dimen/margin200"
        android:layout_height="114dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Text_mont_semibold"
        android:id="@+id/text_banner_title"
        android:text=""
        android:textColor="@color/white"
        android:padding="@dimen/margin15"
        android:textSize="@dimen/textsize16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Text_mont_regular"
        android:id="@+id/text_banner_subtitle"
        android:text=""
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/image_banner"
        android:padding="@dimen/margin15"
        android:textSize="@dimen/textsize14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
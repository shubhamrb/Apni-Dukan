<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_marginTop="@dimen/margin15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_edittext_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Text_mont_medium"
            android:id="@+id/text_edt_upload_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin8"
            android:layout_marginBottom="@dimen/margin8"
            android:textColor="@color/black"
            android:text="Choose Aadhar File"/>


        <androidx.appcompat.widget.AppCompatEditText
            style="@style/Text_mont_regular"
            android:id="@+id/edt_custom_field"
            android:textColor="@color/black"
            android:padding="@dimen/margin15"
            android:background="@color/white"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:hint=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatEditText
            style="@style/Text_mont_regular"
            android:id="@+id/edt_custom_field_number"
            android:textColor="@color/black"
            android:padding="@dimen/margin15"
            android:background="@color/white"
            android:singleLine="true"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:hint=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/Text_mont_regular"
            android:id="@+id/edt_custom_field_mult"
            android:textColor="@color/black"
            android:visibility="gone"
            android:padding="@dimen/margin15"
            android:background="@color/white"
            android:lines="3"
            android:text=""
            android:imeOptions="actionNext"
            android:hint=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>
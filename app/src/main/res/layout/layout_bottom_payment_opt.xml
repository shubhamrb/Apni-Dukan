<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin15"
    tools:context=".ui.activity.MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Text_mont_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin5"
        android:layout_marginTop="@dimen/margin25"
        android:gravity="center"
        android:text="Please choose payment gateway"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin25"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_paytm"
            style="@style/Text_mont_semibold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:layout_weight="1"
            android:background="@color/grey_alpha"
            android:gravity="center"
            android:padding="@dimen/margin15"
            android:text="Paytm"
            android:textColor="@color/light_black"
            android:textSize="@dimen/textsize14"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_phonepe"
            style="@style/Text_mont_semibold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@color/grey_alpha"
            android:gravity="center"
            android:padding="@dimen/margin15"
            android:text="Phonepe"
            android:textColor="@color/light_black"
            android:textSize="@dimen/textsize14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_cashfree"
            style="@style/Text_mont_semibold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:layout_weight="1"

            android:background="@color/grey_alpha"
            android:gravity="center"
            android:padding="@dimen/margin15"
            android:text="Cashfree"
            android:textColor="@color/light_black"
            android:textSize="@dimen/textsize14" />

    </LinearLayout>
</LinearLayout>
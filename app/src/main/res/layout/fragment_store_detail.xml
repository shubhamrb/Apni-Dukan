<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_frag"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/layout_back"/>

    <RelativeLayout
        android:id="@+id/ll_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="@dimen/margin15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image_store"
                        android:visibility="gone"
                        android:background="@color/grey_alpha"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin200"/>

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager_banner_storedetail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin200"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="@dimen/margin15"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/Text_mont_bold"
                                android:id="@+id/text_store_name"
                                android:text="STORE NAME"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/textsize16"
                                android:textColor="@color/black"
                                android:layout_weight="7"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                            <RatingBar
                                android:id="@+id/ratingbar_store"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_weight="3"
                                android:layout_width="0dp"
                                android:layout_gravity="center_vertical|right"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:max="5"
                                android:rating="3"
                                android:theme="@style/MyRatingBar" />

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin5"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/Text_mont_regular"
                                android:id="@+id/text_store_location"
                                android:text="1.5 KMS away from you"
                                android:textSize="@dimen/textsize12"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/black"
                                android:layout_weight="5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                            <RelativeLayout
                                android:layout_gravity="center_vertical|right"
                                android:layout_weight="5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
                                    style="@style/Text_mont_regular"
                                    android:id="@+id/text_store_status"
                                    android:text="Open"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/image_store_status"
                                    android:textSize="@dimen/textsize12"
                                    android:layout_marginRight="@dimen/margin5"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/image_store_status"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_width="@dimen/margin8"
                                    android:layout_height="@dimen/margin8"
                                    app:srcCompat="@drawable/circle_green"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/margin15"
                        android:layout_marginBottom="@dimen/margin15"
                        android:background="@color/black"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Text_mont_regular"
                        android:id="@+id/text_store_desc"
                        android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Text_mont_bold"
                        android:text="@string/services"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/textsize14"
                        android:layout_marginTop="@dimen/margin15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_services"
                        android:layout_marginTop="@dimen/margin15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="@dimen/margin5"
                        android:elevation="@dimen/margin2"
                        android:layout_marginTop="@dimen/margin15"
                        android:layout_marginBottom="@dimen/margin65"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin15"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/Text_mont_bold"
                                android:textColor="@color/purple"
                                android:textAllCaps="true"
                                android:text="@string/review_n_ratings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:layout_marginTop="@dimen/margin15"
                                android:layout_marginBottom="@dimen/margin15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_weight="1.5"
                                    android:layout_marginRight="@dimen/margin15"
                                    android:layout_width="@dimen/margin0"
                                    android:layout_height="wrap_content">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/Text_mont_bold"
                                        android:id="@+id/text_rating"
                                        android:textSize="@dimen/textsize30"
                                        android:text="4.5"
                                        android:textColor="@color/green"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <RatingBar
                                        android:id="@+id/ratingbar_rating"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin10"
                                        android:isIndicator="true"
                                        android:max="5"
                                        android:rating="3"
                                        android:theme="@style/MyRatingBar" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/Text_mont_bold"
                                        android:id="@+id/text_total_users"
                                        android:textSize="@dimen/textsize12"
                                        android:layout_marginTop="@dimen/textsize10"
                                        android:text="Total 100 ratings"
                                        android:textColor="@color/black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_weight="2.2"
                                    android:orientation="vertical"
                                    android:layout_width="@dimen/margin0"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            style="@style/Text_mont_regular"
                                            android:id="@+id/text_r_5"
                                            android:text="5"
                                            android:layout_gravity="center_vertical"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                        <LinearLayout
                                            android:layout_weight="7"
                                            android:orientation="horizontal"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/margin5"
                                            android:layout_marginRight="@dimen/margin5"
                                            android:background="@color/grey_alpha"
                                            android:layout_width="@dimen/margin0"
                                            android:layout_height="@dimen/margin5">

                                            <View
                                                android:id="@+id/ll_rating"
                                                android:layout_weight="5"
                                                android:background="@drawable/gradient_yello"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"/>
                                            <View
                                                android:id="@+id/ll_grey"
                                                android:layout_weight="5"
                                                android:background="@color/grey_alpha"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"/>
                                        </LinearLayout>

                                        <androidx.appcompat.widget.AppCompatTextView
                                            style="@style/Text_mont_regular"
                                            android:id="@+id/text_users_5"
                                            android:layout_weight="3"
                                            android:layout_gravity="left"
                                            android:text="400 Rate"
                                            android:textSize="@dimen/textsize10"
                                            android:gravity="left"
                                            android:layout_width="@dimen/margin0"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_marginTop="@dimen/margin5"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            style="@style/Text_mont_regular"
                                            android:id="@+id/text_r_4"
                                            android:text="4"
                                            android:layout_gravity="center_vertical"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                        <LinearLayout
                                            android:layout_weight="7"
                                            android:orientation="horizontal"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/margin5"
                                            android:layout_marginRight="@dimen/margin5"
                                            android:background="@color/grey_alpha"
                                            android:layout_width="@dimen/margin0"
                                            android:layout_height="@dimen/margin5">

                                            <View
                                                android:id="@+id/ll_rating_4"
                                                android:layout_weight="5"
                                                android:background="@drawable/gradient_yello"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"/>
                                            <View
                                                android:id="@+id/ll_grey_4"
                                                android:layout_weight="5"
                                                android:background="@color/grey_alpha"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"/>
                                        </LinearLayout>

                                        <androidx.appcompat.widget.AppCompatTextView
                                            style="@style/Text_mont_regular"
                                            android:id="@+id/text_users_4"
                                            android:layout_weight="3"
                                            android:layout_gravity="left"
                                            android:text="400 Rate"
                                            android:textSize="@dimen/textsize10"
                                            android:gravity="left"
                                            android:layout_width="@dimen/margin0"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_marginTop="@dimen/margin5"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            style="@style/Text_mont_regular"
                                            android:id="@+id/text_r_3"
                                            android:text="3"
                                            android:layout_gravity="center_vertical"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                        <LinearLayout
                                            android:layout_weight="7"
                                            android:orientation="horizontal"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/margin5"
                                            android:layout_marginRight="@dimen/margin5"
                                            android:background="@color/grey_alpha"
                                            android:layout_width="@dimen/margin0"
                                            android:layout_height="@dimen/margin5">

                                            <View
                                                android:id="@+id/ll_rating_3"
                                                android:layout_weight="5"
                                                android:background="@drawable/gradient_yello"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"/>
                                            <View
                                                android:id="@+id/ll_grey_3"
                                                android:layout_weight="5"
                                                android:background="@color/grey_alpha"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"/>
                                        </LinearLayout>

                                        <androidx.appcompat.widget.AppCompatTextView
                                            style="@style/Text_mont_regular"
                                            android:id="@+id/text_users_3"
                                            android:layout_weight="3"
                                            android:layout_gravity="left"
                                            android:text="400 Rate"
                                            android:textSize="@dimen/textsize10"
                                            android:gravity="left"
                                            android:layout_width="@dimen/margin0"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_marginTop="@dimen/margin5"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            style="@style/Text_mont_regular"
                                            android:id="@+id/text_r_2"
                                            android:text="2"
                                            android:layout_gravity="center_vertical"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                        <LinearLayout
                                            android:layout_weight="7"
                                            android:orientation="horizontal"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/margin5"
                                            android:layout_marginRight="@dimen/margin5"
                                            android:background="@color/grey_alpha"
                                            android:layout_width="@dimen/margin0"
                                            android:layout_height="@dimen/margin5">

                                            <View
                                                android:id="@+id/ll_rating_2"
                                                android:layout_weight="5"
                                                android:background="@drawable/gradient_yello"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"/>
                                            <View
                                                android:id="@+id/ll_grey_2"
                                                android:layout_weight="5"
                                                android:background="@color/grey_alpha"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"/>
                                        </LinearLayout>

                                        <androidx.appcompat.widget.AppCompatTextView
                                            style="@style/Text_mont_regular"
                                            android:id="@+id/text_users_2"
                                            android:layout_weight="3"
                                            android:layout_gravity="left"
                                            android:text="400 Rate"
                                            android:textSize="@dimen/textsize10"
                                            android:gravity="left"
                                            android:layout_width="@dimen/margin0"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_marginTop="@dimen/margin5"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            style="@style/Text_mont_regular"
                                            android:id="@+id/text_r_1"
                                            android:text="1"
                                            android:layout_gravity="center_vertical"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>

                                        <LinearLayout
                                            android:layout_weight="7"
                                            android:orientation="horizontal"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="@dimen/margin5"
                                            android:layout_marginRight="@dimen/margin5"
                                            android:background="@color/grey_alpha"
                                            android:layout_width="@dimen/margin0"
                                            android:layout_height="@dimen/margin5">

                                            <View
                                                android:id="@+id/ll_rating_1"
                                                android:layout_weight="5"
                                                android:background="@drawable/gradient_yello"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"/>
                                            <View
                                                android:id="@+id/ll_grey_1"
                                                android:layout_weight="5"
                                                android:background="@color/grey_alpha"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"/>
                                        </LinearLayout>

                                        <androidx.appcompat.widget.AppCompatTextView
                                            style="@style/Text_mont_regular"
                                            android:id="@+id/text_users_1"
                                            android:layout_weight="3"
                                            android:layout_gravity="left"
                                            android:text="400 Rate"
                                            android:textSize="@dimen/textsize10"
                                            android:gravity="left"
                                            android:layout_width="@dimen/margin0"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/Text_mont_regular"
                                android:id="@+id/text_read_reviews"
                                android:gravity="center_horizontal"
                                android:layout_gravity="center_horizontal"
                                android:paddingLeft="@dimen/margin15"
                                android:paddingRight="@dimen/margin15"
                                android:paddingTop="@dimen/margin8"
                                android:paddingBottom="@dimen/margin8"
                                android:textSize="@dimen/textsize12"
                                android:textColor="@color/white"
                                android:background="@drawable/gradient_purple"
                                android:text="@string/read_reviews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Text_mont_medium"
            android:id="@+id/text_checkout"
            android:background="@drawable/gradient_blue_180"
            android:text="@string/clk_to_proceed"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="@dimen/margin15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <include
        layout="@layout/layout_progress"/>
    <include
        layout="@layout/layout_empty"/>

</RelativeLayout>
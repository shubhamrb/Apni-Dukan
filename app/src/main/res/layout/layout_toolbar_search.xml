<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:id="@+id/rl_heading"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_back_arrow_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin8"
                android:padding="@dimen/margin7"
                android:tint="@color/black"
                android:src="@drawable/ic_arrow_back_ios" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_close_search"
                android:layout_width="@dimen/margin35"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin8"
                android:padding="@dimen/margin10"
                android:visibility="visible"
                android:src="@drawable/ic_close" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_toolbar_title_search"
                style="@style/EditText_Normal_no_margin_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin15"
                android:layout_toStartOf="@+id/image_close_search"
                android:layout_toEndOf="@id/image_back_arrow_search"
                android:hint="@string/search_for_online_service"
                android:singleLine="true"
                android:textSize="@dimen/textsize16" />
            <!--<requestFocus/>-->

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


</LinearLayout>
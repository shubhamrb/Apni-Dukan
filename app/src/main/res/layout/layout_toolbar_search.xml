<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:visibility="gone"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

        <RelativeLayout
                android:id="@+id/rl_heading"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_back_arrow_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/margin7"
                    android:tint="@color/black"
                    android:layout_marginLeft="@dimen/margin8"
                    app:srcCompat="@drawable/ic_arrow_back_ios"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_close_search"
                    android:layout_width="@dimen/margin35"
                    android:layout_height="match_parent"
                    android:padding="@dimen/margin10"
                    android:visibility="visible"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin8"
                    app:srcCompat="@drawable/ic_close"/>

            <androidx.appcompat.widget.AppCompatEditText
                    style="@style/EditText_Normal_no_margin_padding"
                    android:id="@+id/edt_toolbar_title_search"
                    android:layout_toRightOf="@id/image_back_arrow_search"
                    android:layout_toLeftOf="@+id/image_close_search"
                    android:layout_marginLeft="@dimen/margin15"
                    android:hint="@string/search_for_online_service"
                    android:textSize="@dimen/textsize16"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <!--<requestFocus/>-->

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


</LinearLayout>
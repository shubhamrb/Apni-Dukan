<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_stroke_gray_5"
    android:layout_marginTop="@dimen/margin15"
    android:layout_marginLeft="@dimen/margin15"
    android:layout_marginRight="@dimen/margin15"
    android:elevation="@dimen/margin3"
    android:id="@+id/cv_store"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.mamits.apnaonlines.user.ui.customview.SquareRelativeLayout
            android:layout_width="@dimen/margin0"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:layout_weight="2">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_store"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.mamits.apnaonlines.user.ui.customview.SquareRelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/margin0"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin15"
            android:paddingRight="@dimen/margin5"
            android:layout_weight="5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Text_mont_bold"
                        android:id="@+id/text_store_name"
                        android:text="Gov. kiosk"
                        android:layout_marginTop="@dimen/margin15"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Text_mont_regular"
                        android:id="@+id/text_store_loc"
                        android:text="15 Km away from you"
                        android:layout_marginTop="@dimen/margin5"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/textsize12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RatingBar
                        android:id="@+id/ratingbar_store"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin5"
                        android:isIndicator="true"
                        android:max="5"
                        android:rating="3"
                        android:theme="@style/MyRatingBar" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/margin8"
                        android:layout_marginBottom="@dimen/margin15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Text_mont_regular"
                            android:id="@+id/text_store_status"
                            android:text="Open"
                            android:layout_gravity="center_vertical"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image_status"
                            android:layout_marginLeft="@dimen/margin5"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/circle_green"
                            android:layout_toRightOf="@+id/text_store_status"
                            android:layout_width="@dimen/margin8"
                            android:layout_height="@dimen/margin8"/>

                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="@dimen/margin0"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text_mont_semibold"
                android:id="@+id/text_price"
                android:text="$ 225"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin15"
                android:layout_marginTop="@dimen/margin15"
                android:textColor="@color/green"
                android:textSize="@dimen/textsize14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text_mont_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/margin15"
                android:layout_marginRight="@dimen/margin15"
                android:layout_marginBottom="@dimen/margin15"
                android:background="@drawable/gradient_purple"
                android:paddingLeft="@dimen/margin20"
                android:paddingTop="@dimen/margin5"
                android:paddingRight="@dimen/margin20"
                android:paddingBottom="@dimen/margin5"
                android:text="Assign"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize12" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_blue"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="@dimen/margin20"
                android:layout_height="@dimen/margin20"
                android:layout_gravity="end"
                android:layout_margin="@dimen/margin20"
                android:src="@drawable/ic_close"
                app:tint="@color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text_mont_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_marginTop="@dimen/margin20"
                android:text="@string/verify_otp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin15"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_mobile_text"
                    style="@style/Text_mont_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kindly check your SMS sent on \n888888888"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize14" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/text_edit_phone"
                    style="@style/Text_mont_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin10"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/margin5"
                    android:src="@drawable/ic_edit_24" />
            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text_mont_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin15"
                android:text="@string/otp_recieved"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin15">

                <RelativeLayout
                    android:layout_width="@dimen/margin0"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin15"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_otp"
                        style="@style/Text_mont_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="OTP  डाले"
                        android:inputType="number"
                        android:padding="@dimen/margin15"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize14" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_verify_otp"
                    style="@style/Text_mont_regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_marginRight="@dimen/margin15"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/margin15"
                    android:text="@string/verify_otp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_resend"
                style="@style/Text_mont_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin25"
                android:paddingLeft="@dimen/margin15"
                android:paddingTop="@dimen/margin5"
                android:paddingRight="@dimen/margin15"
                android:paddingBottom="@dimen/margin15"
                android:text="Send again 2:00"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize14" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
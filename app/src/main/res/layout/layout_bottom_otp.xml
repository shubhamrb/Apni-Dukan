<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_blue"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text_mont_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin15"
                android:textSize="@dimen/textsize16"
                android:layout_marginTop="@dimen/margin50"
                android:textAllCaps="true"
                android:text="@string/verify_otp"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text_mont_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin15"
                android:textSize="@dimen/textsize14"
                android:layout_marginTop="@dimen/margin15"
                android:text="Kindly check your SMS sent on 888888888"
                android:textColor="@color/white" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_edit_phone"
                style="@style/Text_mont_regular"
                android:text="@string/edit_phone"
                android:padding="@dimen/margin15"
                android:layout_margin="@dimen/margin15"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text_mont_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin15"
                android:textSize="@dimen/textsize14"
                android:text="@string/otp_recieved"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_marginTop="@dimen/margin15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginLeft="@dimen/margin15"
                    android:layout_weight="1"
                    android:layout_width="@dimen/margin0"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/edt_otp"
                        android:layout_alignTop="@+id/edt_otp"
                        android:background="@color/white"
                        android:alpha="0.5"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        style="@style/Text_mont_regular"
                        android:id="@+id/edt_otp"
                        android:text=""
                        android:hint="@string/otp"
                        android:inputType="number"
                        android:textSize="@dimen/textsize14"
                        android:textColor="@color/white"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="@dimen/margin15"
                        android:padding="@dimen/margin15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_verify_otp"
                    style="@style/Text_mont_regular"
                    android:text="@string/verify_otp"
                    android:padding="@dimen/margin15"
                    android:layout_marginRight="@dimen/margin15"
                    android:layout_marginLeft="@dimen/margin20"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize14"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text_mont_regular"
                android:id="@+id/text_resend"
                android:text="Send again 2:00"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="@dimen/margin15"
                android:paddingRight="@dimen/margin15"
                android:paddingTop="@dimen/margin5"
                android:paddingBottom="@dimen/margin15"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin25"
                android:textSize="@dimen/textsize14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_gravity="right"
    android:layout_marginTop="@dimen/margin5"
    android:layout_marginBottom="@dimen/margin8"
    android:gravity="right">

    <LinearLayout
        android:id="@+id/ll_outgoing_msg_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="@dimen/margin230"
            android:layout_height="wrap_content"
            android:background="@drawable/outgoing_msg_back"
            android:orientation="vertical"
            android:padding="@dimen/margin15">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_msg"
                style="@style/Text_mont_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdfsdfsdf"
                android:textColor="@color/white" />

            <RelativeLayout
                android:id="@+id/rl_outgoing_file_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_file_preview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin100"
                    android:layout_marginTop="@dimen/textsize15"
                    android:background="@color/white" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_download_file"
                    android:layout_width="@dimen/margin20"
                    android:layout_height="@dimen/margin20"
                    android:layout_alignBottom="@id/image_file_preview"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/margin15"
                    android:background="@drawable/circle_purple"
                    android:padding="@dimen/margin5"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_download" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_filename"
                    style="@style/Text_mont_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_file_preview"
                    android:layout_marginLeft="@dimen/textsize10"
                    android:layout_marginTop="@dimen/textsize10"
                    android:layout_toStartOf="@+id/text_filesize"
                    android:singleLine="true"
                    android:text="SSC.pdf"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_filesize"
                    style="@style/Text_mont_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_file_preview"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/textsize10"
                    android:layout_marginLeft="@dimen/textsize10"
                    android:layout_marginTop="@dimen/textsize10"
                    android:text="SSC.pdf"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_incomming_tri"
            android:layout_width="@dimen/margin20"
            android:layout_height="@dimen/margin20"
            android:layout_alignBottom="@+id/ll_incomming_msg"
            android:layout_gravity="bottom"
            android:layout_toRightOf="@+id/image_incomming_usericon"
            android:rotation="90"
            app:srcCompat="@drawable/outgoing_blue_tri" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_outgoing_usericon"
        android:layout_width="@dimen/margin15"
        android:layout_height="@dimen/margin15"
        android:layout_below="@+id/ll_outgoing_msg_back"
        android:layout_alignRight="@+id/ll_outgoing_msg_back"
        android:layout_marginTop="@dimen/margin5"
        android:layout_marginRight="@dimen/margin5"
        app:srcCompat="@drawable/ic_user_icon_chat" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_outgoing_msg_time"
        style="@style/Text_mont_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_outgoing_msg_back"
        android:layout_alignBaseline="@+id/image_outgoing_usericon"
        android:layout_marginTop="@dimen/margin5"
        android:layout_marginRight="@dimen/margin5"
        android:layout_toLeftOf="@+id/image_outgoing_usericon"
        android:text="10:10"
        android:textColor="@color/light_grey_text"
        android:textSize="@dimen/textsize12" />

</RelativeLayout>
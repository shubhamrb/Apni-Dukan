<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_stroke_gray_5"
    android:layout_marginTop="@dimen/margin15"
    android:layout_marginLeft="@dimen/margin15"
    android:layout_marginRight="@dimen/margin15"
    android:elevation="@dimen/margin3"
    android:id="@+id/cv_sub_service"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Text_mont_semibold"
            android:id="@+id/text_percentage"
            android:scaleType="fitXY"
            android:gravity="center"
            android:text="200 flat\noff"
            android:padding="@dimen/margin5"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin15"
            android:background="@drawable/circle_gradient_navy_blue"
            android:layout_width="@dimen/margin60"
            android:layout_height="@dimen/margin60"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/margin0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin15"
            android:paddingRight="@dimen/margin5"
            android:layout_weight="4.5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/margin15"
                    android:layout_marginBottom="@dimen/margin15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Text_mont_semibold"
                        android:id="@+id/text_coupon_title"
                        android:text="Get upto 20% SSC Exam Form"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Text_mont_regular"
                        android:id="@+id/text_from_date"
                        android:text="1 Jan 2021"
                        android:layout_marginTop="@dimen/margin8"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/margin0"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text_mont_regular"
                android:id="@+id/text_apply"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/gradient_violet"
                android:text="Apply"
                android:padding="@dimen/margin10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
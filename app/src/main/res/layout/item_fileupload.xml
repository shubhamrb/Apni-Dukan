<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_marginTop="@dimen/margin15"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ll_file_upload_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        //Filepicker-->
        <LinearLayout
            android:id="@+id/ll_file_cust_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Text_mont_regular"
                    android:id="@+id/text_file_label"
                    android:padding="@dimen/margin15"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_marginRight="@dimen/margin15"
                    android:layout_weight="1.5"
                    android:background="@color/white"
                    android:text="Choose Aadhar File"/>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Text_mont_regular"
                    android:id="@+id/text_file_upload"
                    android:paddingTop="@dimen/margin8"
                    android:paddingBottom="@dimen/margin8"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/gradient_purple"
                    android:text="Upload"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_selected_file"
                android:background="@drawable/rounded_stroke_puple_5"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin15"
                android:layout_width="@dimen/margin200"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Text_mont_regular"
                    android:id="@+id/text_filename"
                    android:padding="@dimen/margin15"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin3"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:background="@color/white"
                    android:text="Choose Aadhar File"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_file_close"
                    app:srcCompat="@drawable/ic_file_close"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/margin10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/margin20"
                    android:layout_height="@dimen/margin20"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>